<div class="row mb-4">
  <div class="col">
    <h2 class="mb-0">Post #<%= @post.id %></h2>
  </div>

  <div class="col text-right">
    <div class="btn-group">
      <%= link_to 'Edit', edit_post_path(@post), class: ['btn btn-primary', ('disabled' unless policy(@post).edit?)] %>
      <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: ['btn btn-danger', ('disabled' unless policy(@post).destroy?)] %>
    </div>
  </div>
</div>

<dl>
  <dt>Date</dt>
  <dd><%= @post.date %></dd>

  <dt>Rationale</dt>
  <dd><%= @post.rationale %></dd>

  <dt>Status</dt>
  <dd><%= @post.status.titleize %></dd>
</dl>
